<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_season1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdg_recruitment.mohit.sherlock.Season1Activity">

    <TextView
        android:id="@+id/season1TV"
        android:background="#000000"
        android:textColor="#ffb7c5"
        android:textSize="34sp"
        android:gravity="center_horizontal"
        android:text="Season  1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:letterSpacing="0.25"/>

    <ListView
        android:id="@+id/season1"
        android:layout_below="@id/season1TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</RelativeLayout>
